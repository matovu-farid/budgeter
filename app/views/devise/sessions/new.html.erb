

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class=" b w-100 d-flex justify-content-between align-items-center bg-primary text-white">
    <%= link_to  :back  do %>
      <i class="fa fa-arrow-left text-white" aria-hidden="true"></i>
    <%end%>
  
    <p class="mb-0">LOGIN</p>
    <%= f.submit "Login", class:'btn text-white' %> 
  </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control rounded-0',placeholder: 'email' %>
    <%= f.password_field :password, autocomplete: "current-password",class: 'form-control rounded-0',placeholder: 'password' %>

<% end %>

