<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.email_field :name, autofocus: true, autocomplete: "name",placeholder: 'Full name', class: 'form-control rounded-0' %>


  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control rounded-0' %>
  </div>

  <div class="field">
  
    <%= f.password_field :password, autocomplete: "new-password",placeholder: 'Password', class: 'form-control rounded-0' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: 'Confirm password', class: 'form-control rounded-0' %>
  </div>

  <div class="btn ">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
