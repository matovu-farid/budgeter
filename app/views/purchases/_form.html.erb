
<%= form_with scope: :purchase, url: category_purchases_path(category_id:params[:category_id]) , method: :post do |f| %>
   
    <div class=" b w-100 d-flex justify-content-between align-items-center bg-primary text-white">
        <%= link_to  :back  do %>
          <i class="fa fa-arrow-left text-white" aria-hidden="true"></i>
        <%end%>
    
      <p class="mb-0">Purchase</p>
      <%= f.submit "Submit", class:'btn text-white',data:{turbo:false} %> 
    </div>
      <% if purchase.errors.any? %>
        <p class='text-danger'><%=purchase.errors.full_messages%></p>
      <% end %>
        <%= f.text_field :name,placeholder: 'name', class: 'form-control rounded-0' %>
        <%= f.text_field :amount,placeholder: 'amount', class: 'form-control rounded-0' %>
        <%= f.select  :author_id, @users, {},{class:'form-select'}%>
        <%= f.select :category_id,@categories,{},{class:'form-select'}%>
   
 



<% end %>

